<?xml version="1.0" ?> 
<project name="EnhancedPortals 2">
	<!-- Based upon the EE3 build.xml https://github.com/pahimar/Equivalent-Exchange-3/blob/master/build.xml -->
	<!-- TODO: Filter out ComputerCraft addon files and add to seperate jar file -->
	<property file="build.properties" />
	
	<target name="clean">
		<delete file="${dir.development}\mcp\src\minecraft\mcmod.info" />
		<delete dir="${dir.development}\mcp\src\minecraft\enhancedportals" />
		<delete dir="${dir.development}\mcp\src\minecraft\enhancedcore" />
		<delete dir="${dir.development}\mcp\src\minecraft\dan200" />
		<delete dir="${dir.development}\mcp\reobf\minecraft" />
	</target>
	
	<target name="build">
		<copy todir="${dir.development}\mcp\src\minecraft">
			<fileset dir="${dir.development}\source\enhanced-portals\common\" />
			<fileset dir="${dir.development}\source\enhanced-core\common\">
				<exclude name="mcmod.info" />
			</fileset>
			<fileset dir="${dir.development}\source\computercraft-api\" />
		</copy>
		<replace dir="${dir.development}\mcp\src\minecraft" token="@VERSION@" value="${release.mod.version}" />
	</target>
	
	<target name="recompile">
		<exec dir="${dir.development}\mcp" executable="cmd" os="Windows 7">
			<arg line="/c recompile.bat" />
		</exec>
		<exec dir="${dir.development}\mcp" executable="cmd" os="Windows 8">
			<arg line="/c recompile.bat" />
		</exec>
		<exec dir="${dir.development}\mcp" executable="bash" os="Linux">
			<arg line="recompile.sh" />
		</exec>
		<exec dir="${dir.development}\mcp" executable="bash" os="Mac OS X">
			<arg line="recompile.sh" />
		</exec>
	</target>
	
	<target name="reobfuscate">
		<exec dir="${dir.development}\mcp" executable="cmd" os="Windows 7">
			<arg line="/c reobfuscate_srg.bat" />
		</exec>
		<exec dir="${dir.development}\mcp" executable="cmd" os="Windows 8">
			<arg line="/c reobfuscate_srg.bat" />
		</exec>
		<exec dir="${dir.development}\mcp" executable="bash" os="Linux">
			<arg line="reobfuscate_srg.sh" />
		</exec>
		<exec dir="${dir.development}\mcp" executable="bash" os="Mac OS X">
			<arg line="reobfuscate_srg.sh" />
		</exec>
	</target>
	
	<target name="release-shared">
		<!-- Prep for the release -->
		<antcall target="clean" />
		<antcall target="build" />
		<antcall target="recompile" />		
		<antcall target="reobfuscate" />
		
		<!-- Build the jar -->
		<delete dir="${dir.development}\mcp\reobf\minecraft\enhancedcore" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\dan200" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\ibxm" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\net" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\paulscode" />
		<mkdir dir="${dir.share}\${release.minecraft.version}\${release.mod.version}" />
		<jar destfile="${dir.share}\${release.minecraft.version}\${release.mod.version}\EnhancedPortals-2_${release.mod.version}.jar">
			<fileset dir="${dir.development}\mcp\src\common\"	includes="mcmod.info" />
			<fileset dir="${dir.development}\mcp\reobf\minecraft\" />
			<fileset dir="${dir.development}\source\enhanced-portals\resources" />
		</jar>
		
		<!-- Clean up the MCP source now that we are done -->
		<antcall target="clean" />
	</target>
	
	<target name="release">
		<!-- Prep for the release -->
		<antcall target="clean" />
		<antcall target="build" />
		<antcall target="recompile" />		
		<antcall target="reobfuscate" />
		
		<!-- Build the jar -->
		<delete dir="${dir.development}\mcp\reobf\minecraft\enhancedcore" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\dan200" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\ibxm" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\net" />
		<delete dir="${dir.development}\mcp\reobf\minecraft\paulscode" />
		<mkdir dir="${dir.release}\${release.minecraft.version}\${release.mod.version}" />
		<jar destfile="${dir.release}\${release.minecraft.version}\${release.mod.version}\EnhancedPortals-2_${release.mod.version}.jar">
			<fileset dir="${dir.development}\mcp\src\minecraft\" includes="mcmod.info" />
			<fileset dir="${dir.development}\mcp\reobf\minecraft\" />
			<fileset dir="${dir.development}\source\enhanced-portals\resources" />
		</jar>
		
		<!-- Clean up the MCP source now that we are done -->
		<antcall target="clean" />
	</target>
	
</project>